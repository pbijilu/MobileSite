@using MobileSite.Core
@model Item

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>@Model.Name</h3>    
    </div>
    <div class="panel-body">
        <span>Price: @Model.Price</span>
        <span>PriceMI92:@Model.PriceMi92</span>
        <span>Type: @Model.Type</span>
    </div>
    <div class="panel-footer">
        <a class="btn btn-lg" asp-page="./Detail" asp-route-itemId="@Model.Id">
            <i class="glyphicon glyphicon-zoom-in"></i>
        </a>
        <a class="btn btn-lg" asp-page="./Edit" asp-route-itemId="@Model.Id">
            <i class="glyphicon glyphicon-edit"></i>
        </a>
        <a class="btn btn-lg" asp-page="./Delete" asp-route-itemId="@Model.Id">
            <i class="glyphicon glyphicon-trash"></i>
        </a>
    </div>
</div>